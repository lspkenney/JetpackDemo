<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="title" format="string" />
    <attr name="titleTextSize" format="dimension" />
    <attr name="titleColor" format="color" />
    <attr name="content" format="string" />
    <attr name="contentTextSize" format="dimension" />
    <attr name="contentColor" format="color" />
    <attr name="contentColorHint" format="color" />
    <attr name="contentEnable" format="boolean" />
    <attr name="isSingleLine" format="boolean" />
    <attr name="hint" format="string" />
    <attr name="showLine" format="boolean" />
    <attr name="showCb" format="boolean" />
    <attr name="showImg" format="boolean" />
    <attr name="showBtn" format="boolean" />
    <attr name="singleLine" format="boolean" />
    <attr name="cbText" format="string" />
    <attr name="img" format="reference" />
    <attr name="btnText" format="string" />
    <attr name="imeOptions" format="string" />
    <attr name="bgColor" format="color" />
    <attr name="required" format="boolean" />
    <attr name="inputType" format="enum">
        <enum name="text" value="0x00000001"/>
        <enum name="password" value="0x00000080"/>
        <enum name="number" value="0x00000002"/>
        <enum name="numberDecimal" value="0x00002000"/>
    </attr>

    <declare-styleable name="EditTextItem">
        <attr name="title"/>
        <attr name="titleTextSize"/>
        <attr name="titleColor"/>
        <attr name="content"/>
        <attr name="contentTextSize"/>
        <attr name="contentColor"/>
        <attr name="contentColorHint"/>
        <attr name="contentEnable"/>
        <attr name="hint"/>
        <attr name="showLine"/>
        <attr name="showCb"/>
        <attr name="showImg"/>
        <attr name="img"/>
        <attr name="showBtn"/>
        <attr name="cbText"/>
        <attr name="btnText"/>
        <attr name="inputType"/>
        <attr name="imeOptions"/>
        <attr name="isSingleLine"/>
        <attr name="required"/>
    </declare-styleable>

    <declare-styleable name="AutoCompleteTextItem">
        <attr name="title"/>
        <attr name="titleTextSize"/>
        <attr name="titleColor"/>
        <attr name="content"/>
        <attr name="contentTextSize"/>
        <attr name="contentColor"/>
        <attr name="contentColorHint"/>
        <attr name="contentEnable"/>
        <attr name="hint"/>
        <attr name="showLine"/>
        <attr name="showCb"/>
        <attr name="showImg"/>
        <attr name="showBtn"/>
        <attr name="cbText"/>
        <attr name="img"/>
        <attr name="imeOptions"/>
        <attr name="btnText"/>
        <attr name="inputType"/>
    </declare-styleable>


    <declare-styleable name="TextViewItem">
        <attr name="title"/>
        <attr name="titleTextSize"/>
        <attr name="titleColor"/>
        <attr name="content"/>
        <attr name="contentTextSize"/>
        <attr name="contentColor"/>
        <attr name="contentColorHint"/>
        <attr name="hint"/>
        <attr name="showLine"/>
        <attr name="singleLine"/>
        <attr name="showImg"/>
        <attr name="img"/>
        <attr name="required"/>
    </declare-styleable>

    <declare-styleable name="ItemWithSpinner">
        <attr name="title"/>
        <attr name="titleTextSize"/>
        <attr name="titleColor"/>
        <attr name="bgColor"/>
    </declare-styleable>
</resources>
